<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/coupon_list_layout"
    android:layout_width="324.3dp"
    android:layout_height="129dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="20dp"
    android:layout_marginBottom="2dp"
    android:background="@drawable/coupon_background">

    <ImageView
        android:id="@+id/my_coupon_im_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cancel_black_24dp"
        android:layout_alignParentRight="true"
        android:visibility="invisible"
        />
    <ImageView
        android:id="@+id/my_coupon_im_logo"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:paddingTop="24dp"
        android:paddingRight="45dp">

        <TextView
            android:id="@+id/my_coupon_txt_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:fontFamily="@font/yoon320"
            android:text="모든 음료 30% 세일"/>

        <TextView
            android:id="@+id/my_coupon_txt_brand"
            android:layout_marginTop="18.3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12.5sp"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:fontFamily="@font/yoon320"
            android:text="스타벅스"/>

        <TextView
            android:id="@+id/my_coupon_txt_date"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:fontFamily="@font/yoon320"
            android:text="2018.06.01 ~ 2018.06.30"/>

    </LinearLayout>
</RelativeLayout>
