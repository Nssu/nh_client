<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        sothree:umanoDragView="@+id/dragView"
        sothree:umanoOverlay="true"
        sothree:umanoPanelHeight="40dp"
        sothree:umanoShadowHeight="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray1">

            <FrameLayout
                android:id="@+id/main_layout_circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="11.3dp"
                android:layout_marginRight="11.3dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/rect_border">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.7dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_menu_black_24dp"/>

                <FrameLayout
                    android:layout_width="530px"
                    android:layout_height="531px"
                    android:layout_marginTop="21.7dp"
                    android:layout_marginLeft="79.3dp"
                    android:layout_marginRight="79.3dp"
                    android:layout_gravity="center_horizontal|top"
                    >
                    <com.example.jinsu.nh_life.activity.CircleView
                        android:id="@+id/main_view_circle"
                        android:layout_width="530px"
                        android:layout_height="531px"
                        />

                    <TextView
                        android:id="@+id/test_txt"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello World!"
                        />
                    <TextView
                        android:id="@+id/test_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello World!" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="28dp"
                    android:layout_marginLeft="28dp"
                    android:layout_gravity="center_horizontal|bottom">
                    <LinearLayout
                        android:layout_width="51dp"
                        android:layout_height="51dp"
                        android:background="@drawable/round_border"
                        android:orientation="vertical">

                        <TextView
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="19.5sp"
                            android:text="5.55"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="km"
                            android:textSize="12sp"/>


                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/main_layout_circle">

                <android.support.v4.view.ViewPager
                    android:id="@+id/main_viewpager_coupon"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >
                </android.support.v4.view.ViewPager>

                <com.example.jinsu.nh_life.util.IndicatorAnimation
                    android:id="@+id/main_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    />
            </FrameLayout>

        </RelativeLayout>

        <!-- barcode layout -->
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ff0000">

            <ImageView
                android:id="@+id/c"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/barcode"/>

        </LinearLayout>
    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</RelativeLayout>