<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_layout_circle"
        android:layout_width="440px"
        android:layout_height="440px"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerHorizontal="true">
        <com.example.jinsu.nh_life.activity.CircleView
            android:id="@+id/main_view_circle"
            android:layout_width="440px"
            android:layout_height="440px"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/test_txt"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/main_layout_circle">

        <android.support.v4.view.ViewPager
            android:id="@+id/main_viewpager_coupon"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            >
        </android.support.v4.view.ViewPager>

        <com.example.jinsu.nh_life.util.IndicatorAnimation
            android:id="@+id/main_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            />
    </FrameLayout>

</RelativeLayout>