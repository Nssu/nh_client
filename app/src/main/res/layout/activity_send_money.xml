<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_main"
    android:orientation="vertical"
    android:background="@color/gray1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:orientation="vertical"
        android:background="@color/yellow"
        android:paddingRight="22.7dp"
        android:paddingLeft="22.7dp"
        android:paddingTop="40.7dp"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2000P"
            android:textSize="39.7sp"
            android:textColor="@color/white"
            android:fontFamily="@font/yoon330"/>
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white"
            android:layout_marginTop="17dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="47.3dp"
            android:orientation="horizontal"
            android:background="@drawable/money_back"
            android:layout_marginTop="15dp">

            <TextView
                android:id="@+id/text_point"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="22.3sp"
                android:textColor="@color/black"
                android:fontFamily="@font/yoon330"
                android:gravity="center_vertical"
                android:layout_marginLeft="18dp"/>

            
            <Button
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/next_button"/>


        </RelativeLayout>


        <SeekBar
            android:id="@+id/seekbar"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:max="10000"
            android:progress="0"
            android:min="0" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="0P"
            android:textColor="@color/white"
            android:fontFamily="@font/yoon330" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="10000P"
                android:textColor="@color/white"
                android:fontFamily="@font/yoon330"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9.3dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130.7dp"
        android:padding="15.7dp"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/edittext_background"
            android:paddingLeft="30dp"
            android:hint="계좌번호를 입력하세요"
            android:inputType="number"
            android:fontFamily="@font/yoon310"
            android:textSize="17sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="14.7dp"
            android:gravity="center_horizontal">
            
            <Button
            android:layout_width="124dp"
            android:layout_height="28dp"
            android:background="@drawable/my_account"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="181.7dp"
                android:layout_height="28dp"
                android:background="@drawable/useful_account"/>
            
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="9.3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196.7dp"
        android:padding="15.7dp"
        android:orientation="vertical"
        android:background="@color/white">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/edittext_background"
            android:hint="입금자명"
            android:paddingLeft="30dp"
            android:fontFamily="@font/yoon310"
            android:textSize="17sp"
            android:layout_marginBottom="5dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:background="@drawable/edittext_background"
            android:hint="메모"
            android:paddingLeft="30dp"
            android:fontFamily="@font/yoon310"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="14.7dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/send_submit"
                android:layout_marginRight="20dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/send_cancel"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>